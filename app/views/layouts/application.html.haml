!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Uz'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Uz'}"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    -# application layout styled for Twitter Bootstrap 2.3
    %header.navbar.navbar-fixed-top.navbar-inverse
      = render 'layouts/navigation'
    %main{:role => "main"}
      .container
        -unless is_home?
          .breadcrumbs
            你的位置:
            =breadcrumbs.render format: 'inline'
        .content
          .row
            -if @cols == 1
              .span12
                = render 'layouts/messages'
                = yield
            -else
              -@cols ||= 7
              .span2.sidebar#primary
                = render 'layouts/primary'
              %div{class: "span#{@cols}"}
                = render 'layouts/messages'
                = yield
              -if @cols < 10
                %div{class: "span#{10 - @cols}"}
                  = render :partial => 'layouts/sidebar'
          %footer
